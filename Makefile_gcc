PROG_NAME 	= riscv-example
RISCV64_GCC = riscv64-unknown-elf-gcc
GCC_FLAGS	= -ffreestanding -march=rv64gc -mabi=lp64 -static -mcmodel=medany \
			  -fvisibility=hidden -fno-builtin \
			  -nostdlib -nostartfiles

LD_FLAGS=-T example_p2.ld

.PHONY: all clean qemu
all: $(PROG_NAME)

start.o: 
	$(RISCV64_GCC) $(GCC_FLAGS) -c start_p2.s -o start.o

main.o: main.c
	$(RISCV64_GCC) $(GCC_FLAGS) -c main.c

# uart.o: uart_16550.c
# 	$(RISCV64_GCC) $(GCC_FLAGS) -c uart_16550.c

$(PROG_NAME): start.o main.o
	$(RISCV64_GCC) $(GCC_FLAGS) -o $@ start.o main.o $(LD_FLAGS)
	riscv64-unknown-elf-objdump -sSD $(PROG_NAME) > gcc_objdump.txt
	riscv64-unknown-elf-objcopy -O binary $(PROG_NAME) $(PROG_NAME).bin
	cp $(PROG_NAME) /home/michal/CHERI_FPGA/Flute/Tests/isa/
	python3 tools/convert_to_coe.py $(PROG_NAME).coe $(PROG_NAME).bin

clean:
	rm *.o $(PROG_NAME)

qemu:
	qemu-system-riscv64 -nographic -machine sifive_u -kernel $(PROG_NAME) -bios none
